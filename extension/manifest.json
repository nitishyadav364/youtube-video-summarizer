{ 
    "manifest_version": 3,
    "name": "Youtube Summarizer",
    "description": "An extention to summarise Youtube  videos using the transcript",
    "version" : "1.0",
    "permissions": ["activeTab","declarativeContent"],
    "host_permissions":["http://127.0.0.1:5000/*"],

    "action": {
        "dafault_title": "Summarise this video",
        "default_icon": {
            "16":"images/youtube.png",
            "32":"images/youtube.png",
            "48":"images/youtube.png",
            "128":"images/youtube.png"
        },
        "default_popup": "popup.html"
    },

    "icons" :{
        "16":"images/youtube.png",
        "32":"images/youtube.png",
        "48":"images/youtube.png",
        "128":"images/youtube.png"
    }
}